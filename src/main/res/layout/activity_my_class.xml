<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_todayclass"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="今日课程"/>
    <ImageView
        android:id="@+id/iv_todayclass"
        android:layout_below="@+id/tv_todayclass"
        android:background="#ffDD00"
        android:layout_width="match_parent"
        android:layout_height="100sp" />

    <LinearLayout
        android:id="@+id/ll_myclass"
        android:layout_below="@id/iv_todayclass"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="400dp">
        <ListView
            android:id="@+id/lv_myclass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_todayclass"
            android:layout_marginTop="0dp">
        </ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_myclass"
        android:orientation="horizontal"
        android:textSize="20sp">

        <Button
            android:id="@+id/bt_seeclass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看课程"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_addclass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加课程"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>
